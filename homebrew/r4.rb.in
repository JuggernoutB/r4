class R4 < Formula
  desc "C++ 3d math library."
  homepage "https://github.com/igagis/r4"
  url "https://github.com/igagis/r4/archive/$(version).tar.gz"
  sha256 "$(sha256)"

  depends_on "prorab" => :build
  depends_on "libutki"

  def install
    ENV['PATH'] += ':/usr/local/bin'
    system "make", "-f", "src/makefile", "install", "PREFIX=#{prefix}"
  end

  test do
    system "make", "test"
  end
end
